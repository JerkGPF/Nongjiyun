<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#fff"
    android:orientation="vertical">
    <TextView
        android:id="@+id/supply_buy_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/supply_buy_article"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/supply_buy_article" />

    <TextView
        android:id="@+id/supply_buy_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/supply_buy_tv2"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:text="正文"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp" />

    <TextView
        android:background="@drawable/red"
        android:textColor="#fff"
        android:id="@+id/supply_buy_tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:text="  已过期  "
        android:layout_marginRight="10dp"
        android:layout_alignParentRight="true" />
    <TextView
        android:layout_marginStart="10dp"
        android:id="@+id/supply_buy_address"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/supply_buy_tv_date"
        android:drawableLeft="@mipmap/icon_address"
        android:text="江苏省南京市栖霞区羊山北路1号"
        android:layout_marginLeft="10dp" />
    <TextView
        android:layout_marginEnd="10dp"
        android:layout_alignParentRight="true"
        android:id="@+id/supply_buy_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="2018-05-21"
        android:textSize="15sp"
        android:layout_marginRight="10dp" />
</RelativeLayout>