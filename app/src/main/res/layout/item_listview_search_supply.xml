<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/search_supply_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/search_supply_tv_content_address"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/icon_default_head"
        android:layout_alignParentLeft="true"/>

    <TextView
        android:id="@+id/search_supply_tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/search_supply_article"
        android:text="标题"
        android:textColor="@color/black"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/search_supply_article" />

    <TextView
        android:id="@+id/search_supply_article"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_supply_tv2"
        android:layout_marginStart="120dp"
        android:text="正文"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp" />

        <TextView
            android:background="@drawable/red"
            android:textColor="#fff"
            android:id="@+id/search_supply_tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            android:text="  已过期  "
            android:layout_marginRight="16dp"
            android:layout_alignParentRight="true" />
    <TextView
        android:id="@+id/search_supply_tv_content_address"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignTop="@+id/search_supply_tv_date"
        android:drawableLeft="@mipmap/icon_address"
        android:text="江苏省南京市栖霞区羊山北路1号" />

    <TextView
        android:layout_marginLeft="230dp"
        android:id="@+id/search_supply_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:text="2018-0504-12：07"
        android:textSize="15sp" />
</RelativeLayout>