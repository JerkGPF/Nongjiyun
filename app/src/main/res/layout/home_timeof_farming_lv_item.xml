<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:padding="10dp"
        android:id="@+id/home_farming_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@mipmap/ic_launcher" />

    <TextView
        android:padding="5dp"
        android:id="@+id/home_farming_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="113dp"
        android:layout_marginTop="16dp"
        android:text="标题"
        android:layout_marginLeft="113dp"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/home_farming_item_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/home_farming_item_title"
        android:layout_marginTop="57dp"
        android:padding="5dp"
        android:text="2018-05-17"
        android:layout_alignLeft="@+id/home_farming_item_title" />

    <TextView
        android:padding="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_farming_item_date"
        android:layout_toStartOf="@+id/home_farming_item_reader"
        android:text="阅读数:"
        android:layout_toLeftOf="@+id/home_farming_item_reader" />

    <TextView
        android:padding="5dp"
        android:id="@+id/home_farming_item_reader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/home_farming_item_date"
        android:text="6941"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="50dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/timeof_farming_lv_item_bg"
        android:text="  专业合作  "
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="50dp" />
    <TextView
        android:background="@drawable/green"
        android:id="@+id/zhiding"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="5dp"
        android:text="  置顶  "
        android:textColor="@color/green"
        android:textSize="10dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="11dp" />

</RelativeLayout>
