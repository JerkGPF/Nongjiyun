<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Ask_DetailActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tool"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/springgreen">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/springgreen"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/agricultural_expert_back_iv"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_back_normal" />
            <TextView
                android:layout_marginLeft="180dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="详情"
                android:textColor="#FFF"
                android:textSize="20dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
            <View
                android:id="@+id/ex_view"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#ebebeb" />
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/ex_view"
                android:background="#fff">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/item_exchange_iv"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="5dp"
                    android:src="@mipmap/icon_default_head" />
                <TextView
                    android:id="@+id/item_exchange_tv_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/item_exchange_tv_local"
                    android:layout_alignStart="@+id/item_exchange_tv_local"
                    android:text="用户名"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/item_exchange_tv_local"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_below="@+id/item_exchange_tv_id"
                    android:layout_marginLeft="67dp"
                    android:layout_marginStart="67dp"
                    android:text="江苏省南京市" />
                <TextView
                    android:id="@+id/item_exchange_tv_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/item_exchange_tv_name"
                    android:layout_alignEnd="@+id/item_exchange_tv_article"
                    android:layout_alignRight="@+id/item_exchange_tv_article"
                    android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
                    android:text="    普通农户   "
                    android:textSize="12sp" />
                <TextView
                    android:id="@+id/item_exchange_tv_article"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="48dp"
                    android:padding="5dp"
                    android:text="家庭农场育秧"
                    android:textSize="18sp" />
                <LinearLayout
                    android:id="@+id/exchange_iv_pic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_exchange_tv_article"
                    android:orientation="horizontal"
                    android:paddingLeft="15dp">
                    <ImageView
                        android:id="@+id/item_exchange_iv_picture"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@mipmap/hezuo2"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/item_exchange_iv_picture2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:background="@mipmap/hezuo1"
                        android:scaleType="centerCrop" />
                    <ImageView
                        android:id="@+id/item_exchange_iv_picture3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="3dp"
                        android:layout_weight="1"
                        android:scaleType="centerCrop" />
                </LinearLayout>
                <TextView
                    android:drawableLeft="@mipmap/icon_address"
                    android:padding="5dp"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@id/exchange_iv_pic"
                    android:text="   江苏省宿迁市沭阳县强记路"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/item_exchange_tv_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/item_exchange_iv"
                    android:layout_alignStart="@+id/item_exchange_iv"
                    android:layout_below="@+id/exchange_iv_pic"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:padding="5dp"
                    android:text="2018-05-04  12：07"
                    android:textSize="15sp" />
                <View
                    android:id="@+id/ex_view1"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"
                    android:layout_below="@+id/item_exchange_tv_date"
                    android:background="#ebebeb" />
                <LinearLayout
                    android:id="@+id/ex_line"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ex_view1"
                    android:orientation="horizontal"
                    android:padding="10dp">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:background="@mipmap/icon_comment"
                        android:padding="10dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="10dp"
                        android:text="全部回复" />
                </LinearLayout>
                <View
                    android:id="@+id/ex_view2"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/ex_line"
                    android:background="#ebebeb" />
                <RelativeLayout
                    android:id="@+id/relat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ex_view2"
                    android:padding="10dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/icon_default_head" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:text="舒敏"
                        android:layout_marginLeft="60dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="20dp"
                        android:text="扬州市   邗江区   蒋王街道" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="40dp"
                        android:text="👍" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="60dp"
                        android:text="2018-05-28   14:00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
                        android:text="   农口工作人员   " />

                    <TextView
                        android:drawableLeft="@mipmap/icon_good"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="   0    " />
                </RelativeLayout>

                <View
                    android:id="@+id/ex_view3"
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@+id/relat"
                    android:background="#ebebeb" />

                <RelativeLayout
                    android:id="@+id/relat1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/ex_view3"
                    android:padding="10dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/icon_default_head" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:text="戴中月" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="20dp"
                        android:text="泰州市   兴化市   西郊镇" />

                    <TextView
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="40dp"
                        android:text="好" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="60dp"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="60dp"
                        android:text="2018-05-28   14:00" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
                        android:text="   家庭农场   " />
                    <TextView
                        android:drawableLeft="@mipmap/icon_good"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="60dp"
                        android:text="   2    " />
                </RelativeLayout>

                <View
                    android:id="@+id/ex_view4"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_below="@+id/relat1"
                    android:background="#ebebeb" />
            </RelativeLayout>
            <LinearLayout
                android:background="#fff"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:padding="10dp"
                    android:drawableLeft="@mipmap/icon_collection"
                    android:text="  收藏   1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:padding="10dp"
                    android:drawableLeft="@mipmap/icon_look"
                    android:text="  关注   1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <View
                    android:layout_weight="1"
                    android:layout_width="1dp"
                    android:layout_height="1dp"/>
                <TextView
                    android:textColor="#fff"
                    android:background="@color/green"
                    android:padding="10dp"
                    android:text="回答"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>


</LinearLayout>