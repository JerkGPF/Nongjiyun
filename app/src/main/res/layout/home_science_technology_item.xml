<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/science_technology_lv_image"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="20dp"
        android:background="@mipmap/icon_circle_red"
        android:layout_width="10dp"
        android:layout_height="10dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        app:srcCompat="@android:drawable/btn_radio"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/science_technology_lv_content_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="11dp"
        android:layout_toEndOf="@+id/science_technology_lv_image"
        android:paddingLeft="10dp"
        android:text="标题"
        android:textSize="17sp"
        android:layout_toRightOf="@+id/science_technology_lv_image" />

    <TextView
        android:id="@+id/science_technology_lv_date_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="53dp"
        android:layout_toEndOf="@+id/science_technology_lv_image"
        android:text="时间"
        android:layout_toRightOf="@+id/science_technology_lv_image" />

    <TextView
        android:id="@+id/science_technology_lv_reader_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/science_technology_lv_date_tv"
        android:layout_marginEnd="39dp"
        android:text="阅读数："
        android:layout_alignParentRight="true"
        android:layout_marginRight="39dp" />
</RelativeLayout>
