<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/home_rice_expert_pic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:paddingTop="5dp"
        android:id="@+id/home_rice_expert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_rice_expert_pic"
        android:layout_marginLeft="32dp"
        android:layout_marginStart="32dp"
        android:layout_toEndOf="@+id/home_rice_expert_pic"
        android:layout_toRightOf="@+id/home_rice_expert_pic"
        android:text="姓名"
        android:textColor="@color/black"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/home_rice_expert_company"
        android:layout_alignStart="@+id/home_rice_expert_name"
        android:layout_marginBottom="-46dp"
        android:text="单位："
        android:layout_alignLeft="@+id/home_rice_expert_name" />

    <TextView
        android:id="@+id/home_rice_expert_company"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="157dp"
        android:layout_marginTop="26dp"
        android:text="单位"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="157dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_rice_expert_pic"
        android:layout_alignLeft="@+id/home_rice_expert_name"
        android:layout_alignStart="@+id/home_rice_expert_name"
        android:layout_marginLeft="0dp"
        android:layout_marginStart="0dp"
        android:text="问题：" />

    <TextView
        android:id="@+id/home_rice_expert_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_rice_expert_pic"
        android:layout_alignLeft="@+id/home_rice_expert_company"
        android:layout_alignStart="@+id/home_rice_expert_company"
        android:text="问题" />
    <View
        android:layout_below="@id/home_rice_expert_question"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>

    <TextView
        android:layout_marginTop="5dp"
        android:background="@drawable/grey"
        android:id="@+id/home_rice_provincial_expert_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/home_rice_expert_pic"
        android:layout_marginEnd="52dp"
        android:text="  省级专家  "
        android:layout_alignParentRight="true"
        android:layout_marginRight="52dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:background="@drawable/grey"
        android:id="@+id/home_rice_expert_rice_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/home_rice_expert_pic"
        android:layout_marginStart="-43dp"
        android:layout_toEndOf="@+id/home_rice_provincial_expert_tv"
        android:text="  水稻  "
        android:layout_marginLeft="-43dp"
        android:layout_toRightOf="@+id/home_rice_provincial_expert_tv" />
</RelativeLayout>
