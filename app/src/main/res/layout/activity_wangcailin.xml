            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="2018-06-11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:text="您好"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_marginLeft="5dp"
            android:padding="5dp"
            android:text="2018-06-10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:text="图片两种情况，图一是一窝发黄，图二整盘秧根萎缩，根系不长，请问王教授是什么原因"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="2018-06-10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/green"
                android:padding="5dp"
                android:text="已回答"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:text="图片两种情况，图一是一窝发黄，图二整盘秧根萎缩，根系不长，请问王教授是什么原因"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="2018-06-10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/green"
                android:padding="5dp"
                android:text="已回答"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:text="图片两种情况，图一是一窝发黄，图二整盘秧根萎缩，根系不长，请问王教授是什么原因"
            android:paddingLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:layout_marginLeft="5dp"
                android:padding="5dp"
                android:text="2018-06-10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@color/green"
                android:padding="5dp"
                android:text="已回答"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <View
            android:layout_width="match_parent"
            android:layout_height="60dp"/>
    </LinearLayout>
    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <View
        android:layout_above="@+id/wangcailin_liner4"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:background="#ebebeb" />
    <LinearLayout
        android:background="#fff"
        android:id="@+id/wangcailin_liner4"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:gravity="center">
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
        <Button
            android:id="@+id/wangcailin_ask"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/button_shape01"
            android:text="咨询专家"
            android:textColor="#fff" />
        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"/>
    </LinearLayout>
</RelativeLayout>