<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.QuestionTypeActivity">
    <LinearLayout
        android:orientation="horizontal"
        android:background="#2cc666"
        android:layout_width="match_parent"
        android:layout_height="70dp">
        <Button
            android:id="@+id/btn_type_back"
            android:layout_gravity="center"
            android:padding="10dp"
            android:layout_weight="1"
            android:background="@drawable/ic_keyboard_arrow_left_black_36dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_question_title"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="23dp"
            android:layout_marginLeft="100dp"
            android:layout_weight="5"
            android:textColor="#FFF"
            android:text="选择类型"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_question_ensure"
            android:layout_gravity="center"
            android:padding="10dp"
            android:textSize="23dp"
            android:gravity="center"
            android:layout_weight="2"
            android:textColor="#FFF"
            android:text="确定"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <ListView
        android:id="@+id/lv_question_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <TextView
        android:background="#c7c7c0"
        android:id="@+id/tv_question_gain"
        android:padding="10dp"
        android:paddingTop="12sp"
        android:textSize="20dp"
        android:text="粮经"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"/>
    <ListView
        android:visibility="gone"
        android:id="@+id/lv_question_type2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </ListView>
    <LinearLayout
        android:id="@+id/ly_question_third"
        android:visibility="gone"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:background="#FFF"
            android:id="@+id/tv_question_import"
            android:padding="10dp"
            android:paddingTop="15dp"
            android:paddingBottom="15dp"
            android:textSize="20dp"
            android:text="请输入种养规模"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
        <View
            android:background="#c7c7c0"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>
        <LinearLayout
            android:background="#FFF"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:orientation="horizontal"
            android:id="@+id/ly_question_import"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:id="@+id/et_question_first"
                android:background="@drawable/edittext_boder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <TextView
                android:gravity="center"
                android:text="~"
                android:layout_weight="0.1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/et_question_second"
                android:gravity="center"
                android:background="@drawable/edittext_boder"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="40dp" />
            <TextView
                android:gravity="center"
                android:text="亩"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>