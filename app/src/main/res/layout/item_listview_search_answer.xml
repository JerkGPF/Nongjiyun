<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:background="#fff"
    android:orientation="vertical">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_marginLeft="5dp"
        android:id="@+id/search_answer_iv"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@mipmap/icon_default_head"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/search_answer_tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/search_answer_tv_local"
        android:text="用户名"
        android:textColor="#000000"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/search_answer_tv_local" />

    <TextView
        android:id="@+id/search_answer_tv_local"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/search_answer_tv_id"
        android:layout_marginStart="67dp"
        android:text="江苏省南京市"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="67dp" />

    <TextView
        android:id="@+id/search_answer_tv_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_answer_tv_name"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="49dp"
        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
        android:text="普通农户"
        android:textSize="12sp"
        android:layout_marginRight="49dp"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/search_answer_tv_id2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/search_answer_tv_name"
        android:layout_alignEnd="@+id/search_answer_tv_article"
        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
        android:text="粮经"
        android:gravity="center"
        android:textSize="12sp"
        android:layout_alignRight="@+id/search_answer_tv_article" />

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/search_answer_tv_article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="48dp"
        android:text="正文"
        android:textColor="#000000"
        android:textSize="18sp"
        android:layout_alignParentLeft="true" />

    <LinearLayout
        android:layout_marginLeft="5dp"
        android:id="@+id/search_answer_iv_pic"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/search_answer_tv_article">

        <ImageView
            android:id="@+id/search_answer_iv_picture"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            android:layout_margin="3dp" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/search_answer_iv_picture2"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" />

        <ImageView
            android:scaleType="centerCrop"
            android:id="@+id/search_answer_iv_picture3"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:layout_margin="3dp" />
    </LinearLayout>

    <TextView
        android:layout_marginLeft="5dp"
        android:id="@+id/search_answer_tv_content_address"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:drawableLeft="@mipmap/icon_address"
        android:layout_below="@+id/search_answer_iv_pic"
        android:text="江苏省南京市栖霞区羊山北路1号" />

    <View
        android:id="@+id/fragment_coll_ask_view"
        android:layout_width="wrap_content"
        android:layout_height="2dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@id/search_answer_tv_content_address"
        android:background="#dfe1e1"/>
    <TextView
        android:id="@+id/search_answer_tv_date"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_marginTop="2dp"
        android:layout_alignStart="@+id/search_answer_iv"
        android:layout_below="@+id/search_answer_tv_content_address"
        android:text="2018-0504-12：07"
        android:textSize="15sp"
        android:layout_alignLeft="@+id/search_answer_iv" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/search_answer_tv_content_address"
        android:layout_toStartOf="@+id/search_answer_tv_readum"
        android:text="已回答："
        android:layout_toLeftOf="@+id/search_answer_tv_readum" />
    <TextView
        android:id="@+id/search_answer_tv_readum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/fragment_coll_ask_view"
        android:layout_below="@+id/search_answer_tv_content_address"
        android:text="7"
        android:layout_alignRight="@+id/fragment_coll_ask_view" />
</RelativeLayout>