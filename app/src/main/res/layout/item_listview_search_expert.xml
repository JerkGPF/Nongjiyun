<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/home_search_expert_iv"
        android:layout_marginTop="5dp"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        app:srcCompat="@android:mipmap/sym_def_app_icon"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="15dp" />

    <TextView
        android:textColor="@color/black"
        android:id="@+id/home_search_expert_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="90dp"
        android:layout_marginTop="5dp"
        android:text="姓名"
        android:textSize="15dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="90dp" />

    <TextView
        android:layout_marginTop="5dp"
        android:id="@+id/home_search_expert_sum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/home_search_expert_name"
        android:layout_below="@+id/home_search_expert_name"
        android:gravity="center"
        android:text="单位"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/home_search_expert_question"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/home_search_expert_iv"
        android:layout_alignStart="@+id/home_search_expert_name"
        android:gravity="center"
        android:text="问题"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dp" />

    <TextView
        android:id="@+id/home_search_expert_main"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/home_search_expert_iv"
        android:layout_marginEnd="69dp"
        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
        android:gravity="center"
        android:text="岗位专家"
        android:textColor="@android:color/darker_gray"
        android:textSize="12dp" />

    <TextView
        android:textColor="@android:color/darker_gray"
        android:gravity="center"
        android:textSize="12dp"
        android:background="@drawable/ic_knowledge_menu_pro_rice_tv"
        android:id="@+id/home_search_expert_inn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/home_search_expert_name"
        android:layout_marginEnd="13dp"
        android:text="经济研究"
        android:layout_alignParentRight="true"
        android:layout_marginRight="13dp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/home_search_expert_iv" />
</RelativeLayout>