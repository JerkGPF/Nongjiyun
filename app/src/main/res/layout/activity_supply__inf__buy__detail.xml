<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.Supply_Inf_Buy_DetailActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/supply_buy_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/springgreen">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/springgreen"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/sell_detail_back_iv"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_back_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="150dp"
                android:text="详情"
                android:textColor="#FFF"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="56dp"
                android:text="分享"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="56dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentTop="true"
                android:layout_marginEnd="12dp"
                android:text="举报"
                android:textColor="@color/white"
                android:layout_alignParentRight="true"
                android:layout_marginRight="12dp" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@+id/supply_buy_toolbar_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:text="纯土鸡苗"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_weight="1"
                android:padding="10dp"
                android:textColor="#FF4040"
                android:text="100.0元/只"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:padding="10dp"
                android:text="2018-06-11   12:42"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <TextView
            android:layout_marginStart="10dp"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:drawableLeft="@mipmap/icon_address"
            android:text="江苏省徐州市铜山区010乡道靠近张集村"
            android:layout_marginLeft="10dp" />
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:padding="10dp"
            android:text="求购数量：200只"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:padding="10dp"
            android:text="有效期至：2018-07-11"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:padding="10dp"
            android:text="联  系  人：秦经理"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <View
            android:background="#ebebeb"
            android:layout_width="match_parent"
            android:layout_height="2dp"/>
        <TextView
            android:padding="10dp"
            android:text="描述详情："
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:background="@null"
            android:padding="10dp"
            android:textSize="15dp"
            android:hint="体重0.5-0.8斤左右"
            android:enabled="false"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="match_parent"
            android:layout_height="35dp"/>

        <LinearLayout
            android:layout_marginTop="228dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/green"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="聊天"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="|"
                android:textColor="@color/white" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="拨打电话"
                android:textColor="@color/white" />
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>