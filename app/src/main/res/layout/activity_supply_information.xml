<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ebebeb"
    tools:context=".activity.SupplyInformationActivity">
    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/springgreen">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/springgreen"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/agricultural_expert_back_iv"
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/btn_back_normal" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="150dp"
                android:text="发布供应"
                android:textColor="#FFF"
                android:textSize="20dp" />
            <TextView
                android:padding="5dp"
                android:layout_marginLeft="320dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="发布"
                android:textColor="#FFF" />
        </RelativeLayout>
    </android.support.v7.widget.Toolbar>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="产品分类:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="请选择产品分类"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:text=">"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:background="@null"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:hint="产品或服务名称"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="2dp"/>
            <LinearLayout
                android:background="#fff"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <EditText
                    android:gravity="top"
                    android:background="@null"
                    android:textSize="15dp"
                    android:padding="10dp"
                    android:hint="详细描述"
                    android:layout_width="match_parent"
                    android:layout_height="150dp" />
            </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="计量单位:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="请选择单位"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:text=">"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="供应数量:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="15dp"
            android:background="@null"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:hint="请输入供应数量"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="供应单价:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="15dp"
            android:background="@null"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:hint="请输入供应单价"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="企业名称:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="15dp"
            android:background="@null"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:hint="请输入企业、合作社、农场等名称"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="5dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="有  效  期:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:text="请选择有效期"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:padding="10dp"
            android:text=">"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="联  系  人:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="15dp"
            android:background="@null"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:hint="请输入联系人"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <View
        android:background="#ebebeb"
        android:layout_width="match_parent"
        android:layout_height="8dp"/>
    <LinearLayout
        android:background="#fff"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:padding="10dp"
            android:textColor="@color/black"
            android:text="联系电话:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <EditText
            android:textSize="15dp"
            android:background="@null"
            android:padding="10dp"
            android:layout_marginLeft="20dp"
            android:layout_weight="1"
            android:hint="请输入联系电话"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
            <TextView
                android:padding="20dp"
                android:drawableLeft="@mipmap/icon_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="   定位所在位置"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"/>
            <TextView
                android:padding="15dp"
                android:textColor="@color/black"
                android:text="上传图片或15秒微视频（最多9长图片）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:padding="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_photo"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:layout_margin="10dp"
                    android:background="@drawable/selector_video"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>